

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 col-lg-12">


<h1 class="text-center">Eat that Burger!</h1>

<div class= "row">
<div class="col-sm-6 text-center">
<h2>Burgers to try!</h2>

<ul class="text-center">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>


<div class = "col-sm-6 text-center">
<h2>Burgers devoured!</h2>

<ul class="text-center">
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

</div>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input class="form-control col-sm-4" type="text" id="ca" name="name" placeholder = "name your burger">
  </div>
<button class= "btn btn-outline-dark" type="submit">Add Burger</button>
  
</form>

    </div>
  </div>
</div>